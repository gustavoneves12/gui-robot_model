<?xml version="1.0"?>
<sdf version="1.4">
	<model name="multiple_links">
        <link name="box">
            <visual name="visual_box">
                <pose>0 0 0 0 0 0</pose>
                <geometry>
                    <box>
                        <size>1 0.5 2</size>
                    </box>
                </geometry>
            </visual>
        </link>
        
        <link name="sphere">
            <visual name="visual_sphere">
                <pose>0 0 1.5 0 0 0</pose>
                <geometry>
                    <sphere>
                        <radius>0.5</radius>
                    </sphere>
                </geometry>
            </visual>
        </link>
        
        <link name="cylinder">
            <visual name="visual_cylinder">
                <pose>0 0 2.5 0 0 0</pose>
                <geometry>
                    <cylinder>
                        <radius>0.5</radius>
                        <length>1.0</length>
                    </cylinder>
                </geometry>
            </visual>
        </link>

		<link name="mesh">
			<visual name="visual_mesh">
				<pose>0 0 4.7 0 -1.57079633 0</pose>
				<geometry>
					<mesh>
						<uri>model://multiple_visuals/mesh.dae</uri>
						<scale>5 5 5</scale>
					</mesh>
				</geometry>
			</visual>
		</link>

		<joint name="box_to_sphere_revolute" type="revolute">
			<parent>box</parent>
			<child>sphere</child>
			<pose>0 0 0 0 0 0</pose>
			<axis>
				<xyz>0 0 0</xyz>
				<limit>
					<lower>0</lower>
					<upper>0</upper>
				</limit>
			</axis>
		</joint>
		
        <joint name="sphere_to_cylinder_revolute" type="revolute">
            <parent>sphere</parent>
            <child>cylinder</child>
            <pose>0 0 0 0 0 0</pose>
            <axis>
                <xyz>0 0 0</xyz>
                <limit>
                    <lower>0</lower>
                    <upper>0</upper>
                </limit>
            </axis>
        </joint>
        
        <joint name="cylinder_to_mesh_revolute" type="revolute">
            <parent>cylinder</parent>
            <child>mesh</child>
            <pose>0 0 0 0 0 0</pose>
            <axis>
                <xyz>0 0 0</xyz>
                <limit>
                    <lower>0</lower>
                    <upper>0</upper>
                </limit>
            </axis>
        </joint>
		
	</model>
</sdf>
